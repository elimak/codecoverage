<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.elimak.navigationdemo.ui.tabs.feed.TabFeedViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="230dp"
                    tools:context=".ui.landing.FullScreenFragment"
                    android:padding="40dp"
                    android:background="@drawable/feed_bgd">
                    <TextView
                        android:layout_marginTop="80dp"
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@{viewmodel.text}"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="#ffffff"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go Back"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/message"
                        android:onClick="@{()->viewmodel.goBack()}"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go To Settings"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button1"
                        android:onClick="@{()->viewmodel.goToSettings()}"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go To Discovery Tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button2"
                        android:onClick="@{()->viewmodel.goToDiscovery()}"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go Discovery Nested Tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button3"
                        android:onClick="@{()->viewmodel.goToDiscoveryNested()}"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mainb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="150dp"
                    tools:context=".ui.landing.FullScreenFragment"
                    android:paddingRight="40dp"
                    android:background="@drawable/feed_bgd">
                    <TextView
                        android:layout_marginTop="80dp"
                        android:id="@+id/messageb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@{viewmodel.text}"
