                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="#ffffff"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go Back"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/messageb"
                        android:onClick="@{()->viewmodel.goBack()}"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go To Settings"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button1b"
                        android:onClick="@{()->viewmodel.goToSettings()}"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go To Discovery Tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button2b"
                        android:onClick="@{()->viewmodel.goToDiscovery()}"/>

                    <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/button4b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go Discovery Nested Tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button3b"
                        android:onClick="@{()->viewmodel.goToDiscoveryNested()}"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </ScrollView>

